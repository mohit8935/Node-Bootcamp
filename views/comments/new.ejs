<% include ../partials/header %>
<div class="container">
    <h1>Add new Comment for <% campground.name %></h1>
    
    <div class="row">
            <form action="/campgrounds/:id/comments" method="POST">
                <div class="form-group">
                    <input  class="form-control"type="text" name= "comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name= "comment[author]" placeholder="author">
                </div>
                <button class="btn btn-lg btn-default"> Submit</button>
            </form>
          
            <a href="/campgrounds"> Go back to Campgrounds</a>
    </div>
    
   
</div>



